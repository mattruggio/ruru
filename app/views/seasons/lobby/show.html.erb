<% content_for(:title, "Lobby") %>

<%= render partial: "seasons/header", locals: { season: @season } %>

<h3>Lobby</h3>

<p>
  Join code: <%= @season.join_code %>
</p>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.code %></td>
        <td><%= team.user.email_address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
